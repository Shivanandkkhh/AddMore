            <span class="hfc-stat-label">{{ block.settings.left_stat_1_label }}</span>
            <span class="hfc-stat-value"
              ><span class="hfc-stat-value-num">{{ block.settings.left_stat_1_num }}</span
              ><span class="hfc-stat-value-unit">{{ block.settings.left_stat_1_unit }}</span></span
            >
